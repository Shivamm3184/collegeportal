<%- include('./header.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Providence University Campus Tour</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    
    .scrolling-images {
      white-space: nowrap;
      overflow: hidden;
      position: relative;
      background-color: #f8f9fa;
      padding: 20px 0;
    }
    .carouselHeight{
    height: 100vh;
}

    .scrolling-images .images-track {
      display: inline-block;
      animation: scroll-left 20s linear infinite;
    }

    .scrolling-images img {
      width: 200px;
      height: 150px;
      margin: 0 10px;
      border-radius: 8px;
    }

    @keyframes scroll-left {
      0% {
        transform: translateX(100%);
      }
      100% {
        transform: translateX(-100%);
      }
    }

    .section {
      padding: 60px 0;
    }

    .section img {
      width: 100%;
      border-radius: 10px;
    }
  </style>
</head>
<body>

  <!-- Banner Carousel -->
  <div id="campusCarousel" class="carousel slide" data-bs-ride="carousel">
     <div class="carousel-inner">
      <div class="carousel-item active" data-bs-interval="2000">
        <img src="/Images/pexels-aashish-rai-115346237-19016682.jpg" class="d-block w-100" alt="..." width="100%" height="700px">
      </div>
      <div class="carousel-item" data-bs-interval="2000">
        <img src="/Images/pexels-clement-proust-363898785-14495769.jpg" class="d-block w-100" alt="..."width="100%" height="700px">
      </div>
      <div class="carousel-item" data-bs-interval="2000">
        <img src="Images/pexels-michael-gattorna-3447992-5147595.jpg" class="d-block w-100" alt="..."width="100%" height="700px">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#campusCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#campusCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
    </button>
  </div>


  <!-- Alternating Image-Text Sections -->
  <div class="container">

    <div class="row section align-items-center">
      <div class="col-md-6">
        <h3>Academic Block </h3>
        <p>Our academic buildings reflect a heritage feel that blends tradition with modern education.</p>
      </div>
      <div class="col-md-6">
        <img src="/Images/pexels-czapp-arpad-3647289-12644679.jpg" alt="Campus 1">
      </div>
    </div>

    <div class="row section align-items-center">
      <div class="col-md-6 order-md-2">
        <h3>Library & Learning Hubs</h3>
        <p>A quiet place for knowledge seekers with digital access and extensive resources.</p>
      </div>
      <div class="col-md-6 order-md-1">
        <img src="/Images/library.jpg" alt="Library" height="500px">
      </div>
    </div>

    <div class="row section align-items-center">
      <div class="col-md-6">
        <h3>Hostel & Residential Life</h3>
        <p>Comfortable and secure student housing that feels like a second home.</p>
      </div>
      <div class="col-md-6">
        <img src="/Images/CampusImage-2.avif" alt="Classrooms">
      </div>
    </div>

    <div class="row section align-items-center">
      <div class="col-md-6 order-md-2">
        <h3>Sports and Recreation</h3>
        <p>Well-equipped fields and courts that support fitness, fun, and team spirit.</p>
      </div>
      <div class="col-md-6 order-md-1">
        <img src="/Images/sports.jpg" alt="Sports" height="400px">
      </div>
    </div>

  </div>

  <!-- Scrolling Images Right to Left -->
  <div class="scrolling-images mt-5">
    <div class="images-track">
      
      <img src="/Images/cafe.webp" alt="Cafeteria" />
      <img src="/Images/fall.webp" alt="Auditorium" />
      <img src="/Images/labs.jpg" alt="Labs" />
      <img src="/Images/night.jpg" alt="Night View" />
      <img src="/Images/sports.webp" alt="Hostel" />
      <img src="/Images/open.jpg" alt="Hostel" />
      <!-- Duplicate to create infinite effect -->
       
       
      
    </div>  
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
