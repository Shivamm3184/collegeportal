<%-include('./header.ejs') %>

    <br><br><br><br><br>
    <div class="container-fluid profile" >
        <div class="row">
            <div class="col-md-3"></div>

            <div class="col-md-6 text-center">
                
                <% if(message.length> 0){ %>
                    <div class="alert alert-danger">
                        <!-- to print -->
                        <%= message %>
                    </div>
                    <% } %>
                <div class="card  text-white" style="background: linear-gradient(rgb(0 0 0 / 59%))">
                    <br>
                    <h2 class="text-center " style="font-family:'Times New Roman', Times, serif " >PROFILE</h2>
                    <center><img src="<%= i.url %>" class="rounded-circle" alt="" height="200px" width="200px" style="border-radius: 0px;margin-top: 10px; margin-bottom: 10px;"></center>
                    <div class="card-body">
                        <h4 style="font-family:'Times New Roman', Times, serif ">Name:  <%= n %>
                        </h4>
                        <h4 style="font-family: 'Times New Roman', Times, serif ">Email:  <%= e %></h4>
                        <br>
                        <button data-bs-toggle="modal" data-bs-target="#updateprofile" class="btn btn-primary text-white">Update
                            profile</button>

                        <button data-bs-toggle="modal" data-bs-target="#ChangePassword" class="btn btn-primary text-white">Change
                            Password</button>
                            <br>
                            <br>

                    </div><!--card body end-->


                </div><!--card end-->
            </div>
            <div class="col-md-3"></div>

        </div><!--row end-->




        <!--updateProfile Modal -->
        <div class="modal fade" id="updateprofile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Update Profile </h1>
                        
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/updateProfile" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="">Name</label>
                                <input type="text" value="<%= n %>" name="name" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Email</label>
                                <input type="text" readonly value="<%= e %>" name="email" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Image</label>
                                <input type="file" name="image" class="form-control">
                                <img src="<%= i.url %>" alt="" width="50">
                            </div>

                            <button type="submit" class="btn btn-primary">Update Profile</button>

                        </form>
                    </div>

                </div>
            </div>
        </div>
        <!--End updateProfile Modal -->

        <!--Change Password Modal -->
        <div class="modal fade" id="ChangePassword" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Change Password</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/changePassword" method="post">
                            <div class="mb-3">
                                <label for="">Old Password</label>
                                <input type="text" name="op" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">New Password</label>
                                <input type="password" name="np" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="">Confirm Password</label>
                                <input type="password" name="cp" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary text-white">Change Password</button>

                        </form>
                    </div>

                </div>
            </div>
        </div>
        <!--End Change Password Modal -->


    </div><!--container end-->




    <%-include('./footer.ejs') %>